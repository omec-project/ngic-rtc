{
    "LegacyAdmfApp": {
		"NodeName": "legacy_admf",
		"ServerPort": 10001,
		"LegacyAdmfIntfcIp": "192.168.0.69",
		"LegacyAdmfIntfcPort": 10000
    },
    "EpcTools": {
        "EnablePublicObjects": false,
        "Debug": false,
        "SynchronizationObjects": {
            "NumberSemaphores": 100,
            "NumberMutexes": 100
        },
        "Logger": {
            "ApplicationName": "",
            "QueueSize": 8192,
            "NumberThreads": 1,
            "SinkSets": [
               {
                  "SinkID": 1,
                  "Sinks": [
                     {
                        "SinkType": "syslog",
                        "LogLevel": "startup",
                        "Pattern": "[__APPNAME__] [%n] [%l] %v"
                     },
                     {
                        "SinkType": "stdout",
                        "LogLevel": "info",
                        "Pattern": "[%Y-%m-%dT%H:%M:%S.%e] [stdout] [%^__APPNAME__%$] [%n] [%^%l%$] %v"
                     },
                     {
                        "SinkType": "stderr",
                        "LogLevel": "minor",
                        "Pattern": "[%Y-%m-%dT%H:%M:%S.%e] [stderr] [%^__APPNAME__%$] [%n] [%^%l%$] %v"
                     },
                     {
                        "SinkType": "basic_file",
                        "LogLevel": "info",
                        "Pattern": "[%Y-%m-%dT%H:%M:%S.%e] [%^__APPNAME__%$] [%n] [%^%l%$] %v",
                        "FileName": "./logs/epctest.basic.log",
                        "Truncate": false
                     }
                  ]
               },
               {
                  "SinkID": 2,
                  "Sinks": [
                     {
                        "SinkType": "basic_file",
                        "LogLevel": "debug",
                        "Pattern": "%v",
                        "FileName": "./logs/epc_app_audit.log",
                        "Truncate": false
                     }
                  ]
               },
               {
                  "SinkID": 3,
                  "Sinks": [
                     {
                        "SinkType": "rotating_file",
                        "LogLevel": "debug",
                        "Pattern": "%v",
                        "FileName": "./logs/epc_app_stats.log",
                        "MaxSizeMB": 20,
                        "RotateOnOpen": true,
                        "MaxNumberFiles": 0
                     }
                  ]
               }
            ],
            "Logs": [
               {
                  "LogID": 1,
                  "Category": "system",
                  "SinkID": 1,
                  "LogLevel": "debug"
               },
               {
                  "LogID": 2,
                  "Category": "audit",
                  "SinkID": 2,
                  "LogLevel": "debug"
               },
               {
                  "LogID": 3,
                  "Category": "admf",
                  "SinkID": 1,
                  "LogLevel": "debug"
               },
               {
                  "LogID": 4,
                  "Category": "dadmf",
                  "SinkID": 1,
                  "LogLevel": "debug"
               }
            ]
        }
    }
}
