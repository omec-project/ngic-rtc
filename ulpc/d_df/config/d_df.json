	"EpcTools": {
		"EnablePublicObjects": false,
		"Debug": false,
		"SynchronizationObjects": {
			"NumberSemaphores": 100,
			"NumberMutexes": 100
		},
		"Logger": {
			"ApplicationName": "epc_app",
			"QueueSize": 8192,
			"NumberThreads": 1,
			"SinkSets": [
				{
					"SinkID": 1,
					"Sinks": [
						{
							"SinkType": "syslog",
							"LogLevel": "startup",
							"Pattern": "[__APPNAME__] [%n] [%l] %v"
						},
						{
							"SinkType": "stdout",
							"LogLevel": "info",
