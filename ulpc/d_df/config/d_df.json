						},
						{
							"SinkType": "stderr",
							"LogLevel": "minor",
							"Pattern": "[%Y-%m-%dT%H:%M:%S.%e] [stderr] [%^__APPNAME__%$] [%n] [%^%l%$] %v"
						},
						{
							"SinkType": "basic_file",
							"LogLevel": "debug",
							"Pattern": "[%Y-%m-%dT%H:%M:%S.%e] [%^__APPNAME__%$] [%n] [%^%l%$] %v",
							"FileName": "./logs/epcinfo.basic.log",
							"Truncate": false
						}
					]
				},
				{
					"SinkID": 2,
					"Sinks": [
						{
							"SinkType": "basic_file",
							"LogLevel": "debug",
							"Pattern": "%v",
							"FileName": "./logs/epc_app_audit.log",
							"Truncate": false
						}
					]
				},
				{
					"SinkID": 3,
					"Sinks": [
						{
							"SinkType": "basic_file",
							"LogLevel": "debug",
							"Pattern": "%v",
							"FileName": "./logs/epc_app_stats.log",
							"Truncate": false
						}
					]
				}
			],
			"Logs": [
				{
					"LogID": 1,
					"Category": "system",
					"SinkID": 1,
					"LogLevel": "debug"
				},
				{
					"LogID": 4,
					"Category": "swm",
					"SinkID": 1,
					"LogLevel": "debug"
				},
				{
					"LogID": 5,
